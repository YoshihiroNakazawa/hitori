<div class="container" style="margin-bottom: 90px">
  <div class="col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 ">
    <h3>このひとりごとを記憶します</h3>

    <%= form_for(@tweet) do |f| %>
      <%= f.hidden_field :content %>
      <div class="panel" style="text-align:left;padding:10px;word-wrap:break-word">
        <%= @tweet.content %>
      </div>
      <br>
      <%= f.submit "いいよ", :class => "btn btn-default" %>
      <%= f.submit "やめておく", name: 'back', :class => "btn btn-default" %>
    <% end %>

